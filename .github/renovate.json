{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>mrt-map/renovate-config:no-dev"
  ],
  "poetry": {
    "enabled": false
  },
  "packageRules": [
    {
      "matchFileNames": ["gatelogue-client/**", "gatelogue-aggregator/**"],
      "extends": [":pinAllExceptPeerDependencies"]
    },
    {
      "matchFileNames": ["gatelogue-types-*/**"],
      "extends": [":pinOnlyDevDependencies"]
    },
    {
      "matchFileNames": ["gatelogue-aggregator/**"],
      "matchDepTypes": ["tool.hatch.envs.types", "requires-python"],
      "extends": [":preserveSemverRanges"]
    }
  ]
}
