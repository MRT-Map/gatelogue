{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>mrt-map/renovate-config:no-dev"
  ],
  "packageRules": [
    {
      "matchFileNames": ["gatelogue-client/**", "gatelogue-aggregator/**"],
      "extends": [":pinAllExceptPeerDependencies"]
    },
    {
      "matchFileNames": ["gatelogue-types-*/**"],
      "extends": [":pinOnlyDevDependencies"]
    },
    {
      "matchDepTypes": [
        "action"
      ],
      "pinDigests": false
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/pyproject.toml/"],
      "matchStrings": [
        "\"(?<packageName>[A-Z0-9a-z_-]*)(?<currentValue>.*)\", # renovate"
      ],
      "datasourceTemplate": "pypi"
    }
  ]
}
